@model List<Duyuru>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Anasayfa</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body class="scrollbar" id="style-2">
    <!-- Navigation-->
    <div class="fixed-start">
        <!-- PartialView -->
        @await Html.PartialAsync("_Navbar2")
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-start" id="mainNav">
        <div class="container">
            <a href="/home/Index" class="navbar-brand" id="navbar1-img">
                <img src="~/img/logo.png" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars ms-1"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase me-auto py-4 py-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/home/Universitemiz">Üniversitemiz</a></li>
                    <li class="nav-item"><a class="nav-link" href="/home/Akademik">Akademik</a></li>
                    <li class="nav-item"><a class="nav-link" href="/home/Arastirma">Araştırma</a></li>
                    <li class="nav-item"><a class="nav-link" href="/home/Ihtisaslasma">Ihtisaslaşma</a></li>
                    <li class="nav-item"><a class="nav-link" href="/home/DuYayinlar">DüYayınlar</a></li>
                    <li class="nav-item"><a class="nav-link" href="/home/DuDuyurular">DüDuyurular</a></li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Masthead-->
    <header class="masthead">
        <div class="container">
            <div class="masthead-subheading">Düzce Üniversitesi</div>
            <div class="masthead-heading text-uppercase">Değer üreten üniversite</div>
        </div>
    </header>
    <!-- Services-->
    
    <!-- Portfolio Grid-->
    <section class="page-section bg-dark" id="portfolio">
        <div class="container" id="duyuru">
            
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Duyurular</h2>
                <h3 class="section-subheading text-muted">Üniversitemizin aldığı son kararlar, açıklanan son sınavlar ve çok daha fazlası</h3>
            </div>

            <div class="row">
                <div class="col-4">
                    <!-- ViewComponent -->
                    @await Component.InvokeAsync("Duyurular")
                </div>
                
                <div class="col-8">
                    @foreach (var i in Model)
                    {
                        <div class="container p-3 mt-4" style="background-color: #141414;">        
                            <div class="row justify-content-center px-3 my-4">
                                <div class="modal-body">
                                    <!-- Project details-->
                                    <h2 class="text-uppercase">@i.Baslik</h2>
                                    <p class="item-intro text-muted">@i.Ozet</p>
                                    <p>@i.Icerik</p>
                                    <ul class="list-inline">
                                    </ul>
                                </div>
                            </div>
                        </div>        
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- About-->
    <section class="page-section" id="about">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Hakkımızda</h2>
                <h3 class="section-subheading text-muted">Düzce üniversitesinin kuruluştan bugüne süreci nasıldı?</h3>
            </div>
            <ul class="timeline">
                <li>
                    <div class="timeline-image"><img class="rounded-circle img-fluid" src="~/img/about/1.jpg" alt="..." /></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4>2007-2015</h4>
                            <h4 class="subheading">Prof.Dr. Funda SİVRİKAYA ŞERİFOĞLU</h4>
                        </div>
                        <div class="timeline-body"><p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sunt ut voluptatum eius sapiente, totam reiciendis temporibus qui quibusdam, recusandae sit vero unde, sed, incidunt et ea quo dolore laudantium consectetur!</p></div>
                    </div>
                </li>
                <li class="timeline-inverted">
                    <div class="timeline-image"><img class="rounded-circle img-fluid" src="~/img/about/2.jpg" alt="..." /></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4>2015-2022</h4>
                            <h4 class="subheading">Prof.Dr.Nigar DEMİRCAN ÇAKAR</h4>
                        </div>
                        <div class="timeline-body"><p class="text-muted">Prof. Dr. Nigar DEMİRCAN ÇAKAR, 1976 yılında İstanbul’da doğdu. Beşiktaş Atatürk Anadolu Lisesi’ni bitirdikten sonra lisans eğitimini 1998 yılında Mimar Sinan Üniversitesi İstatistik Bölümü’nde tamamladı. Gebze Teknik Üniversitesi İşletme Fakültesi Yönetim ve Organizasyon Anabilim Dalı’nda 2000 yılında yüksek lisans, 2003 yılında da doktora eğitimini tamamladı. 2003-2005 yılları arasında Amerika Birleşik Devletleri’nde ve Sabancı Üniversite’sinde doktora sonrası araştırmacı olarak çalıştı. 2005 yılında Yönetim ve Organizasyon alanında Doçent unvanını aldı ve Abant İzzet Baysal Üniversitesi İşletme Bölümü’ne doçent olarak atandı. Anabilim dalı başkanlığı, bölüm başkanlığı ve dekan yardımcılığı görevlerini yürüttü.</p> <p class="text-muted">2008 yılında Düzce Üniversitesi’nde göreve başladı ve 2010 yılında Düzce Üniversitesi’nde Profesör unvanını aldı. Anabilim dalı başkanlığı, merkez müdürlüğü ve dekanlık görevlerini yürüttü. 2010- 2015 yılları arasında Düzce Üniversitesi Rektör Yardımcılığı ve İşletme Fakültesi Dekanlığı görevlerini yürütmüştür. 15 Mayıs 2015 tarihinde ilk ve 24 Mayıs 2019 tarihinde ise ikinci kez Cumhurbaşkanımız Recep Tayyip Erdoğan tarafından Düzce Üniversitesi Rektörü olarak atanmıştır. Üniversitelerarası Kurul Üyeliği ve Yükseköğretim Kurulu Etik Kurul Üyeliği yapmıştır. Avrupa Üniversiteler Birliği (EUA) Seçici Kurulu üyesidir. Çoğunluğu örgüt kültürü, yenilik yönetimi ve örgütsel sadakat konularında olmak üzere yönetim bilimleri ve örgütsel davranış alanında 50’den fazla uluslararası ve ulusal yayına sahiptir. Bu yayınlarına yapılmış 1600’den fazla da atıf bulunmaktadır. İleri düzeyde İngilizce bilmektedir. İki çocuk annesidir.</p></div>
                    </div>
                </li>
                <li>
                    <div class="timeline-image"><img class="rounded-circle img-fluid" src="~/img/about/3.jpg" alt="..." /></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4>2022</h4>
                            <h4 class="subheading">Prof. Dr. Nedim SÖZBİR</h4>
                        </div>
                        <div class="timeline-body"><p class="text-muted">Prof. Dr. Nedim SÖZBİR, 1965 yılında Kars’ta doğdu. İlkokulu ve ortaokulu Üsküdar’da, lise eğitimini 1982 yılında Gemi Yapı Meslek Lisesi’nde tamamladı. 1986 yılında Yıldız Teknik Üniversitesi Kocaeli Müh. Fak. Mak. Müh. ve 1991 yılında  Yıldız Teknik Üniversitesi  F.B.E.  Mak. Y. Müh. olarak mezun oldu. 1986-1987 ve 1989-1990 yılları arasında Türkiye Gemi Sanayi A.Ş. Pendik-Sulzer Motor Fabrikası'nda Mak. Müh. olarak çalıştı. 1988-1989 tarihleri arasında Dz.K.K. Gemi Onarım Şubesi'nde Makine Asteğmen olarak askerlik görevini ifa etti.  1990-1995 yılları arasında  Yıldız Teknik Üniversitesi Kocaeli Müh. Fak. Mak. Müh. Böl. Arş. Gör. olarak çalıştı. 1994-1995 yılları arası Miami Üniversitesi Mak. Müh. Böl. FL, A.B.D. Misafir Araştırmacı olarak doktora tez çalışmasını tamamladı. 1995 yılında İstanbul Üniversitesi F.B.E.  Mak. Müh. EABD  Dr. Mühendis unvanını aldı. 2000-2004 yılları arasında Carnegie Mellon Üniversitesi Mak. Müh.Böl. PA, A.B.D. doktora sonrası araştırmacı olarak çalıştı. 2006-2007 yılları arası Thales Alenia Space, Cannes, Fransa’da Türksat 3A Haberleşme Uydusu Projesi Teknoloji Transferi programında yer alarak, Uydu Isıl Mühendisi olarak çalıştı. 2015-2016 yılları arasında Savunma Sanayi Müsteşarlığında Ar-Ge Panel Üyesi ve TÜBİTAK Uzay Teknolojileri Enstitüsü'nde Başuzman Araştırmacı olarak çalıştı. 2018-2020 yılları arasında TÜBİTAK Marmara Araştırma Merkezi’nde Yönetim Kurulu Üyesi,  2018-2020 yılları arasında BMC Power Motor ve Kontrol Teknolojileri A.Ş'de  1000 ve 1500 BG Güç Sistemleri Geliştirilmesi Projesinde Araştırmacı, 2010-2015 yılları arasında Göktürk 1 Uydusu kapsamında Uzay Sistemleri Merkezi (USET) kurulumunda Danışman  ve  2017-2021 yılları arası TÜBİTAK Marmara Araştırma Merkezi’nde Başkan Danışmanı olarak görev yaptı. 2006 yılından itibaren Türksat A.Ş.'de Yerli Haberleşme Uydusu Geliştirilmesi Projesinde  Araştırmacı ve Danışman olarak çalıştı. 1995-2022  yılları arasında Sakarya Üniversitesi Müh. Fak. Mak.Müh. Böl. Öğretim Üyesi  ve 2019-2022 yılları arası Sakarya Üniversitesi Teknik Eğitim Fakültesi Dekan V. olarak görev yaptı. 04.08.2022 tarihinde Düzce Üniversitesi Rektörü olarak atandı.</p></div>
                    </div>
                </li>
                <li class="timeline-inverted">
                    <div class="timeline-image">
                        <h4>
                            Gelecek
                            <br />
                            Çok Daha
                            <br />
                            Güzel                           
                        </h4>
                    </div>
                </li>
            </ul>
        </div>
    </section>
    <!--About-->

    <div class="collapse" id="Politikalar">
        <div class="card card-body">
            Some placeholder content for the collapse component. This panel is hidden by default but revealed when the user activates the relevant trigger.
        </div>
    </div>

    <!--footer-->
    <div class="fixed-end">
        <footer class="footer py-4" id="footer">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 text-lg-start">Copyright &copy; Emre Gündüz 2022</div>
                    <div class="col-lg-4 my-3 my-lg-0">Bütün haklar saklıdır.</div>
                    <div class="col-lg-4 text-lg-end">
                        <a class="link-danger text-decoration-none" data-bs-toggle="collapse" href="#Politikalar" role="button" aria-expanded="false" aria-controls="Politikalar">Politikalar</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
</body>
</html>
